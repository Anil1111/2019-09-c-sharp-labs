<Window x:Class="lab_17_rabbit_explosion_wpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_17_rabbit_explosion_wpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="Auto" Width="Auto" FontFamily="Arial" FontSize="30">
    <Grid Background="#2DB8EB">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Button x:Name="Button01" Background="#7E46E8" Grid.Row="0" Grid.Column="0" Click="Button01_Click"/>
        <Label x:Name="Label01" Background="#21FFBF" Grid.Row="0" Grid.Column="1" Content="some text..."
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <Image x:Name="Image01" Grid.Row="1" Grid.Column="1" Stretch="Uniform" Source="/Media/rabbit.png"/>
    </Grid>
    
</Window>
